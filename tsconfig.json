{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "outDir": "dist",
      "skipLibCheck": true,
      "declaration": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules"]
  }
